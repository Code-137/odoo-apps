<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_eletronic_document_form" model="ir.ui.view">
        <field name="model">l10n_br_fiscal.document</field>
        <field name="inherit_id" ref="l10n_br_fiscal.document_form"/>
        <field name="arch" type="xml">
            <button name="action_document_confirm" position="after">
                <button name="generate_account_move" states="imported" string="Terminar processo de importação" type="object" class="oe_highlight"/>
            </button>
            <page name="finance" position="inside">
                <group string="Duplicatas">
                    <field name="duplicata_ids">
                        <tree>
                            <field name="fiscal_document_id" invsible="1" />
                            <field name="currency_id" invsible="1" />
                            <field name="numero_duplicata" />
                            <field name="data_vencimento" />
                            <field name="valor" />
                        </tree>
                    </field>
                </group>
            </page>
            <page name="delivery" position="inside">
                <group string="Reboque">
                    <field name="reboque_ids">
                        <tree>
                            <field name="fiscal_document_id" invsible="1" />
                            <field name="placa_veiculo" />
                            <field name="uf_veiculo" />
                            <field name="rntc" />
                            <field name="vagao" />
                            <field name="balsa" />
                        </tree>
                    </field>
                </group>
                <group string="Volumes">
                    <field name="volume_ids">
                        <tree>
                            <field name="fiscal_document_id" invsible="1" />
                            <field name="quantidade_volumes" />
                            <field name="especie" />
                            <field name="marca" />
                            <field name="numeracao" />
                            <field name="peso_liquido" />
                            <field name="peso_bruto" />
                        </tree>
                    </field>
                </group>
            </page>
            <field name="force_compute_delivery_costs_by_total" position="after">
                <field name="transportadora_id" />
                <field name="placa_veiculo" />
                <field name="uf_veiculo" />
                <field name="rntc" />
            </field>
        </field>
    </record>

    <record id="view_br_nfe_import_invoice_eletronic_item_form" model="ir.ui.view">
        <field name="name">br_nfe_import_invoice_eletronic_item_form</field>
        <field name="model">l10n_br_fiscal.document.line</field>
        <field name="inherit_id" ref="l10n_br_fiscal.document_line_form"/>
        <field name="arch" type="xml">
            <field name="cnae_id" position="after">
                <field name="product_ean" />
                <field name="product_cprod" />
                <field name="product_xprod" />
            </field>
        </field>
    </record>

</odoo>
