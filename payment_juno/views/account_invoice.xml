<odoo>
    <record id="view_account_invoice_form" model="ir.ui.view" >
        <field name="name">View Account Invoice Form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="br_account.view_br_account_invoice_form" />
        <field name="arch" type="xml">
            <xpath expr="//tree[@name='vencimentos']/field[@name='name']" position="after">
                <field name="iugu_status"/>
                <field name="iugu_secure_payment_url" widget="url"/>
                <button name="iugu_open_wizard_invoice" string="Nova Data de Vencimento Iugu" type="object" class="btn btn-success btn-sm"
                        attrs="{'invisible': ['|', ('iugu_status', '!=', 'pending'), ('reconciled', '=', True)]}"/>
                <button name="iugu_verify_payment" string="Verificar Pagamento Iugu" type="object" class="btn btn-success btn-sm"
                        attrs="{'invisible': ['|', ('iugu_status', '!=', 'pending'), ('reconciled', '=', True)]}"/>
                <button name="iugu_cancel_acc_move_line" string="Cancelar" type="object" class="btn btn-danger btn-sm" confirm="Confirma o Cancelamento?"
                        attrs="{'invisible': ['|', ('iugu_status', '!=', 'pending'), ('reconciled', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
