<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    ===========================================================================
    HEADER TEMPLATE
    ===========================================================================
    -->
    <template id="code137_header" inherit_id="website.layout">
        <xpath expr="//header" position="replace">
            <header>
                <meta charset="utf-8" />
                <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
                <section class="code137_header">
                    <div class="container">
                        <a href="/">
                            <img class="logo" src="/code137_website/static/src/images/code137-logo.png" />
                        </a>
                        <div class="code137_nav">
                            <!-- <a href="/#code137-team">Quem Somos</a> -->
                            <a href="/#code137_services">Serviços</a>
                            <a href="/#code137-contact">Contato</a>
                        </div>
                    </div>
                </section>
            </header>
        </xpath>
    </template>

    <template id="code137_footer" inherit_id="website.layout">
        <xpath expr="//footer" position="replace">
            <section class="code137_footer">
                <div class="container">
                    <div class="code137-fotter-wrapper">
                        <a class="code137-logo" href="/">
                            <img class="logo" src="/code137_website/static/src/images/code137-logo.png" />
                        </a>
                        <div class="code137-fotter-item">
                            <p class="fotter-title">Mapa do site</p>
                            <ul>
                                <li>
                                    <a href="/#code137_services">Serviços</a>
                                </li>
                                <li>
                                    <a href="/#code137-about-us">Sobre nós</a>
                                </li>
                                <!-- <li>
                                    <a href="/#code137_know_odoo">Conheça o Odoo</a>
                                </li> -->
                                <li>
                                    <a href="/#code137-github">Github</a>
                                </li>
                                <!-- <li>
                                    <a href="/#code137-team">Time</a>
                                </li> -->
                                <!-- <li>
                                    <a href="">Parceiros</a>
                                </li> -->
                                <li>
                                    <a href="/#code137-contact">Contato</a>
                                </li>
                            </ul>
                        </div>
                        <div class="code137-fotter-item">
                            <p class="fotter-title">Contato</p>
                            <ul>
                                <li>E-mail: <a href="mailto:vendas@code137.com.br">vendas@code137.com.br</a></li>
                                <li>Whatsapp:
                                    <a target="_blank" href="https://wa.me/554888390133">
                                        (48) 98839-0133
                                    </a>
                                </li>
                                <li>Instagram:  <a target="_blank" href="https://www.instagram.com/code.137">@code.137</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>

    <template id="form_success_page">
        <t t-call="website.layout">
            <t t-set="additional_title">Success</t>
            <div class="container code-137-success-page">
                <h2 class="code137-contact-title">Form successfully submited!</h2>
                <h3 class="github_description">We will contact you shortly.</h3>
                <p>If you prefer you can send us a message on <strong><a target="_blank" href="https://wa.me/554888390133">Whatsapp</a>.</strong></p>
                <a class="btn-thin-dark" href="/">Return to Homepage</a>
            </div>
        </t>
    </template>

</odoo>
